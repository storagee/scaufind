extends layout

block content
    .container.sign-in-page
        form.form-signinup(action='#{submitUrl}', method='post')
            .row
                .col-md-8.col-md-offset-4.col-lg-8.col-lg-offset-4.col-xs-8.col-xs-offset-4
                    h2.form-signinup-heading 请登录
            .form-group
                .row
                    .col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.col-xs-10.col-xs-offset-1
                        .input-group
                            label.input-group-addon(for='username')
                                i.glyphicon.glyphicon-user
                            input#username.form-control(placeholder='邮箱地址', name='email', type='email')
            .form-group
                .row
                    .col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.col-xs-10.col-xs-offset-1
                        .input-group
                            label.input-group-addon(for='password')
                                i.glyphicon.glyphicon-lock
                            input#password.form-control(name='password', type='password', placeholder='登陆密码')
            .row
                .col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.col-xs-10.col-xs-offset-1
                    button.btn.btn-lg.btn-primary.btn-block(type='submit') 马上登录
            if message != undefined
                .row
                    .col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.col-xs-10.col-xs-offset-1
                        .alert.alert-danger #{message}
        script(type='text/javascript').
            document.getElementById('username').focus();
